#include <iostream>
#include <conio.h>

using namespace std; 

int main ()
{
	int a, b;
	
	cout << "                                  ROWS AND COLUMS" << endl;
	cout << "--------------------------------------------------------------------------------"<<endl;	
	cout << "How Many Rows: ";cin>>a;
  
	cout << "How Many Columns: ";cin>>b;
	cout << " "<<endl; 
	
	for (int i = 0; i<a; i++)
	{
		for (int j = 0; j<b; j++)
		{
			cout << "*";
		}
		cout << " "<<endl;
	}

	_getch ();
	return 0;
  }
